<script>
                            var flag=1;
                            var mrauto = document.querySelectorAll("div");
                            var welcome = document.getElementsByClassName('welcome');
                            var back= document.getElementsByClassName('back');
                            var home = document.getElementsByClassName('home');
                            
                            for(let i=0; i<mrauto.length; i++){
                                if(mrauto[i].querySelector('.page-context-header')){
                                    welcome[i].style.display = "none";
                                    flag=0;
                                }
                                if(flag==0){
                                    back[i].style.display="inline";
                                    home[i].style.display ="inline";
                                }
                                
                            }
                        </script>
                        
