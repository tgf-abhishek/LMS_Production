                    <div class="ml-auto d-flex" style="display:none !important;">
                        {{{pageheadingbutton}}}
                    </div>
                    <div id="course-header" style="display:none !important;">
                        {{{courseheader}}}
                    </div>

                </div>
                <div id="page-navbar" class="nav" style="padding-top: 20px;">
                        {{{navbar}}}
