            {{/boostimage}}
            <div class="card-body {{^contextheader}}p-2{{/contextheader}}">
                <div class="d-flex">
                    {{#contextheader}}
                    <div class="mr-auto" style="display:flex;">
                        {{{contextheader}}}
                        <h1 class="welcome" style="color:white;">Welcome to TGF Shivir Management System</h1>
                        
                    </div>
                    {{/contextheader}}
                    

                    {{#settingsmenu}}
                    <div class="context-header-settings-menu">
                        {{{settingsmenu}}}
                    </div>
                    {{/settingsmenu}}
                    <div class="header-actions-container flex-shrink-0" data-region="header-actions-container">
                        {{#headeractions}}
